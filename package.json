{
  "name": "dependency-health-workspace",
  "private": true,
  "description": "Monorepo for Dependency Health",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "pretest": "npm run build -w @fait/dependency-health-core && npm run component -w @fait/dependency-health-core && npm run build -w @fait/dependency-health",
    "build": "npm run build -w @fait/dependency-health-core && npm run build -w @fait/dependency-health && npm run build -w @fait/dependency-health-github-action && npm run component -w @fait/dependency-health-core",
    "lint": "eslint ./packages ./test",
    "test": "mocha ./test ./test/special --timeout 10000",
    "test-coverage": "cross-env NODE_ENV=test nyc --reporter=lcov mocha ./test ./test/special --timeout 20000",
    "prettier": "prettier --write \"**/*.@(js|json|md|yml)\"",
    "prettier-check": "npm run prettier -- --check"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.2",
    "@babel/plugin-transform-object-assign": "^7.22.5",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.23.2",
    "@babel/register": "^7.22.15",
    "babel-eslint": "^10.1.0",
    "babel-plugin-add-module-exports": "^1.0.4",
    "babel-plugin-istanbul": "^6.1.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.13.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "fs-extra": "^9.0.1",
    "mocha": "^11.0.1",
    "nyc": "^17.1.0",
    "patch-version": "^0.1.1",
    "prettier": "^2.1.2",
    "proxyquire": "^2.1.3",
    "should": "^13.2.3",
    "svelte": "^3.38.2",
    "typescript": "^5.3.3"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "exclude": [
      "dist",
      "test"
    ],
    "require": [
      "@babel/polyfill",
      "@babel/register"
    ],
    "reporter": [
      "html",
      "text"
    ]
  },
  "mocha": {
    "require": [
      "@babel/register"
    ]
  }
}
